pkgname=luaposix
pkgver=5.1.5
pkgrel=1
pkgdesc="A POSIX library for Lua"
arch=('i686' 'x86_64')
url="http://luaforge.net/projects/luaposix/"
license=('GPL')
depends=('glibc')
source=(http://git.alpinelinux.org/cgit/$pkgname/snapshot/$pkgname-$pkgver.tar.bz2)
md5sums=('6b1a5764275247bef5df6424bd246399')

build() {
  #install -Dm644 $srcdir/LICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE

  cd $srcdir/$pkgname-$pkgver
  sed -i "s#PREFIX=\t/usr/local#INSTALL= $pkgdir/usr#" Makefile
  make || return 1
  install -D -m755 posix.so $pkgdir/usr/lib/lua/5.1/posix.so || return 1
}
