

post_install() {

  cat << 'EOM'

  ==> The config files and some example impulses were installed
  ==> to /usr/share/jconv/config-files.
  ==> This can be copied to $HOME/ for per-user configuration.
  ==> Please refer to /usr/share/jconv/README.CONFIG for full details.

EOM

}

post_upgrade() {

  post_install

}

op=$1
shift
$op $*
