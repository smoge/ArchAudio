pkgname=ladspa-blop
pkgver=0.2.8
pkgrel=1
pkgdesc="Bandlimited LADSPA Oscillator Plugins"
arch=('i686' 'x86_64')
url="http://blop.sourceforge.net/index.html"
license=('GPL')
depends=('glibc')
provides=('blop')
groups=('ladspa-plugins')
makedepends=('ladspa')
source=(http://downloads.sourceforge.net/sourceforge/${pkgname}/blop-${pkgver}.tar.gz)
md5sums=('4baedbf1e7cacc7d1034c4bcd5556d6f')

build() {
  cd "${srcdir}/blop-${pkgver}"
  ./configure --prefix="/usr"
  make DESTDIR="${pkgdir}"
}

package(){
  cd "${srcdir}/blop-${pkgver}"
  make DESTDIR="${pkgdir}" install
}
