# $Id$
# Maintainer: Arch Linux Pro Audio <dev@archaudio.org>
# Contributor:  Bernardo Barros <bernardobarros@gmail.com>

pkgname=scate-git
pkgver=20101217
pkgrel=1
pkgdesc="Scate: Kate SuperCollider plugin"
arch=(i686 x86_64)
url="https://github.com/jleben/Scate/"
license=('GPL')
groups=()
depends=()
makedepends=(cmake automoc4 kdesdk-kate)
provides=(scate)
conflicts=(scate)
replaces=()
backup=()
options=()
install=
source=("https://github.com/jleben/Scate/blob/master/INSTALL")
md5sums=('a433a51c13d5a56452165bff45e8c1e0')
noextract=()

_gitroot="git://github.com/jleben/Scate.git"
_gitname="Scate"


build() {
  cd $srcdir
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    (cd $_gitname && git pull origin)
    msg "The local files are updated."
  else
    git clone $_gitroot
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  cd "$srcdir/Scate"

  cmake . -DCMAKE_INSTALL_PREFIX=/usr
  make || return 1
  make DESTDIR="$pkgdir/" install
}
