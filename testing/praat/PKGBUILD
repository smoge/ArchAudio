# Contributor: Bernardo Barros <bernardobarros@gmail.com>

pkgname=praat
pkgver=5.2.21
filever=5221
pkgrel=1
pkgdesc="a program for sound analysis and synthesis"
arch=('x86_64' 'i686')
url="http://www.fon.hum.uva.nl/praat/"
license=('GPL')
depends=( 'alsa-lib' 'gtk2' )
source=("http://www.fon.hum.uva.nl/praat/praat${filever}_sources.tar.gz")

build() {
	cd "$srcdir/sources_5221/"
	
	cp makefiles/makefile.defs.linux makefile.defs
	
	sed -i 's|-I|-I/usr/include/gdk-pixbuf-2.0 -I|' makefile.defs
	sed -i 's|/usr/local/lib|/usr/lib|g' makefile.defs
	sed -i 's|/usr/local/include|/usr/include|g' makefile.defs
	
	make
}

package() {
	cd "$srcdir/sources_5221/"
	
	install -Dm755  praat "$pkgdir/usr/bin/praat"
}

md5sums=('2a1c369c8d3f1d5c4a4fb986592e4def')
