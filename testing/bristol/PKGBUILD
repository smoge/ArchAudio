# $Id$
# Maintainer: Arch Linux Pro Audio <dev@archaudio.org>
# Contributor: DonVla <donvla@users.sourceforge.net>

pkgname=bristol
pkgver=0.40.8
pkgrel=1
pkgdesc="Vintage synthesizers emulator"
arch=(i686 x86_64)
url="http://bristol.sourceforge.net"
license=('GPL')
makedepends=('gcc')
depends=('jack' 'libx11')
options=(!libtool)
source=(http://downloads.sourceforge.net/sourceforge/${pkgname}/${pkgname}-${pkgver}.tar.gz)
md5sums=('793f37923f2f1e5000389add6b8fa836')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
  install -v -m 0644 ChangeLog ${pkgdir}/usr/share/bristol/
  install -v -m 0644 README ${pkgdir}/usr/share/bristol/
}

# vim:set ts=2 sw=2 et:
