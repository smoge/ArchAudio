# Maintainer: Arch Linux Pro Audio <dev@archaudio.org>
# Contributor: DonVla <donvla@users.sourceforge.net>

pkgname=bristol
pkgver=0.40.4
pkgrel=1
pkgdesc="Vintage synthesizers emulator"
arch=(i686 x86_64)
url="http://bristol.sourceforge.net"
license=('GPL')
makedepends=('gcc')
depends=('jack-audio-connection-kit' 'libx11')
options=(!libtool)
source=(http://downloads.sourceforge.net/sourceforge/${pkgname}/${pkgname}-${pkgver}.tar.gz)
md5sums=('7fab778f829d15c068a1d6e60f4a1ded')
sha256sums=('bb196f0d615b0f42883a3e8f31a8d0751415f18f288871374d3d5b95de2f19f0')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
  install -v -m 0644 ChangeLog ${pkgdir}/usr/share/bristol/
  install -v -m 0644 README ${pkgdir}/usr/share/bristol/
}

# vim:set ts=2 sw=2 et:
