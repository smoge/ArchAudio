# $Id$
# Maintainer: Arch Linux Pro Audio <dev@archaudio.org>
# Contributor: farid abdelnour <farid at atelier-lab.org>

pkgname=fms
pkgver=1.0
pkgrel=4
pkgdesc="The F Modular Synthesizer is a tool for creating all kinds of sounds, white and low-band noises and midi-like tunes with modulated frequencies, volumes, balances and many more features."
arch=('i686' 'x86_64')
url="http://fmsynth.sourceforge.net/"
license=('GPL')
depends=('tcl' 'tk' 'sdl_gfx')
makedepends=('cmake')
source=('http://downloads.sourceforge.net/fmsynth/fms-1.0.tar.gz'
	'patches.diff')
md5sums=('3dc0eae280d15ab7bf60d49ddbcca28c'
         '95d853ebbaf42ec9543ab4bcc738f7de')
build() {
  cd $startdir/src/${pkgname}-${pkgver}
  patch -b -p1 < ${startdir}/patches.diff
  cmake . -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=Release
  make
  make DESTDIR=${startdir}/pkg install
}
