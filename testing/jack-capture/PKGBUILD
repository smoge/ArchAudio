pkgname=jack-capture
pkgver=0.9.57
pkgrel=1
pkgdesc="Simple CLI recording tool for JACK (including a minimalistic GUI)"
url="http://www.notam02.no/arkiv/src/"
license="GPL"
arch=('i686' 'x86_64')
depends=('jack' 'gtk2' 'lame')
optdepends=( 'meterbridge' )
provides=('jack_capture')
conflicts=('jack_capture')

source=(http://archive.notam02.no/arkiv/src/jack_capture-$pkgver.tar.gz)
md5sums=('6b7266fa172754a3a7b6f8ec30ce4ea7')

build() {
  cd ${srcdir}/jack_capture-${pkgver}
  make
}

package(){
  cd ${srcdir}/jack_capture-${pkgver}
  make install prefix=${pkgdir}/usr
}

