# Maintainer: Arch Linux Pro Audio <dev@archaudio.org>
# Contributor: Bernardo Barros <bernardobarros at gmail dot com>

pkgname=puredata
pkgver=0.42_6
pkgrel=2
pkgdesc="PureData: a real-time music and multimedia environment"
arch=('i686' 'x86_64')
url="http://crca.ucsd.edu/~msp/software.html"
license=('BSD' 'GPL')
depends=('tk' 'fftw2')
source=(http://crca.ucsd.edu/~msp/Software/pd-${pkgver/_/-}.src.tar.gz)
md5sums=('27f98731613c7b08208fd2c5fdbc8e3c')

build() {

  cd "$srcdir/pd-${pkgver/_/-}/src"
  ./configure --prefix=/usr --enable-alsa --enable-jack --mandir=/usr/share/man
#--enable-fftw 
  make
  make DESTDIR="$pkgdir" install
}
