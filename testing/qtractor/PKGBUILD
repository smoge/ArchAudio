# Maintainer: Arch Linux Pro Audio <dev@archaudio.org>
# Maintainer: Philipp Überbacher <hollunder at gmx dot at>
pkgname=qtractor
pkgver=0.4.2
pkgrel=1
pkgdesc="An Audio/MIDI multi-track sequencer"
arch=('i686' 'x86_64')
url="http://qtractor.sourceforge.net/qtractor-index.html"
license=('GPL')
depends=('qt' 'liblo' 'jack-audio-connection-kit' 'rubberband' 'libvorbis' 'libmad')
makedepends=('ladspa' 'dssi')
source=(http://downloads.sourceforge.net/sourceforge/qtractor/${pkgname}-${pkgver}.tar.gz)
md5sums=('7e4f34f01bb96bf36763afd9ad0a0adc')

build() {

cd "${srcdir}/${pkgname}-${pkgver}"
./configure --prefix="/usr" || return 1
make || return 1
make DESTDIR="${pkgdir}" install || return 1
}
