# $Id$
# Maintainer: Arch Linux Pro Audio <dev@archaudio.org>
# Contributor: Shockrates <antisocrates@gmail.com>

pkgname=wineasio64
pkgver=0.8.0
pkgrel=2
pkgdesc="Steinberg's Windows ASIO driver for Wine (x86_64 architecture)"
arch=(x86_64)
url="http://sourceforge.net/projects/wineasio/"
license=('LGPL')
depends=('wine' 'lib32-jack')
makedepends=('asio')
install=$pkgname.install
source=(http://downloads.sourceforge.net/wineasio/wineasio-$pkgver.tar.bz2)
md5sums=('5729f181e876cba5102c393017bf3a42')

build() {
  cd "$srcdir/wineasio"
  ln -s /usr/include/steinberg-asio/asio.h
  make
  install -Dm755 wineasio.dll.so "$pkgdir/usr/lib32/wine/wineasio.dll.so"
}
