# Contributor: Philipp Ãœberbacher <hollunder at gmx dot at>
pkgname=guitarix
pkgver=0.06.0
pkgrel=1
pkgdesc="Simple mono guitar amplifier for jack."
arch=('i686' 'x86_64')
url="http://guitarix.sourceforge.net/"
license=('GPL')
depends=('jack' 'gtk2')
makedepends=('ladspa' 'python')
optdepends=('jack_capture' 'jconvolver')
source=(http://downloads.sourceforge.net/sourceforge/guitarix/${pkgname}-${pkgver}.tar.bz2)
md5sums=('6095f13cde6919050e8b35fbfed28c2a')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  ./waf configure --prefix="/usr" || return 1
  ./waf build || return 1
  ./waf install --destdir="${pkgdir}" || return 1
}

