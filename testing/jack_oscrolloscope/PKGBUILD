# Contributor: Bernardo Barros <bernardobarros@gmail.com>

pkgname=jack_oscrolloscope
pkgver=0.7
pkgrel=1
pkgdesc="A simple waveform viewer for JACK. The waveform is displayed in realtime, so you can always see the signal the instant it comes through JACK's input port."
arch=('i686' 'x86_64')
url="http://das.nasophon.de/jack_oscrolloscope/"
license=('GPL')
depends=('jack' 'sdl')
source=(http://das.nasophon.de/download/$pkgname-$pkgver.tar.gz)
md5sums=('610beeb5044c5017537e43d50bbb803b')

build() {

  cd $srcdir/$pkgname-$pkgver
  make PREFIX="$pkgdir/usr"
}

package() {

  mkdir -p "$pkgdir"/usr/bin               
  install -m755 $srcdir/$pkgname-$pkgver/$pkgname $pkgdir/usr/bin   

  # Docs
  mkdir -p "$pkgdir"/usr/share/doc/$pkgname
  install -m644 $srcdir/$pkgname-$pkgver/README "$pkgdir"/usr/share/doc/$pkgname
                                                                                                                                                                                                      
}
