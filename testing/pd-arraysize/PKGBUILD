pkgname=pd-$_origName
_pkgname=arraysize
pkgver=0.1
pkgrel=1
pkgdesc="Externals for PureData"
arch=('i686' 'x86_64')
url="http://www.puredata.org/"
depends=('pd')
license=('GPL2')
provides=(arraysize)
conflicts=(arraysize)
groups=('pd-externals')
source=(http://sourceforge.net/projects/pure-data/files/libraries/$_pkgname/$_pkgname-$pkgver.tar.gz)
md5sums=('06034c291571814f138b79c3eff09ee5')

build() {
  cd $srcdir/arraysize-0.1
  make
  make DESTDIR=$startdir/pkg install
}

