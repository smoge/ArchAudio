pkgname=pd-$_origName
_origName=arraysize
pkgver=0.1
pkgrel=1
pkgdesc="Externals for PureData"
arch=('i686' 'x86_64')
url="http://www.puredata.org/"
depends=('pd')
license=('GPL2')
provides=($_origName)
conflicts=($_origName)
groups=('pd-externals')
source=(http://sourceforge.net/projects/pure-data/files/libraries/$_origName/$_origName-$pkgver.tar.gz)
md5sums=('06034c291571814f138b79c3eff09ee5')

build() {
  cd "${srcdir}/${_origName}"
  make
  make DESTDIR=$startdir/pkg install
}

