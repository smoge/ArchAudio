# $Id$
# Maintainer: Arch Linux Pro Audio <dev@archaudio.org>
# Contributor: Philipp Überbacher <murks at lavabit dot com>
pkgname=lv2-c++-tools
pkgver=1.0.3
pkgrel=1
pkgdesc="Utilities needed for ll-plugins"
arch=('i686' 'x86_64')
url="http://ll-plugins.nongnu.org/hacking.html"
license=('GPL3')
depends=('gcc-libs' 'bash')
source=(http://download.savannah.nongnu.org/releases-noredirect/ll-plugins/lv2-c++-tools-${pkgver}.tar.bz2)
md5sums=('8db2c4124af6ef932002bba9d99ba09f')

build() {

  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix="/usr"
  make
  make DESTDIR="${pkgdir}" install
}

