# $Id$
# Maintainer: Arch Linux Pro Audio <dev@archaudio.org>
# Contributor: Philipp Überbacher <hollunder at gmx dot at>

pkgname=jkmeter
pkgver=0.4.0
pkgrel=1
pkgdesc="A horizontal or vertical bargraph level meter based on the ideas of mastering guru Bob Katz."
url="http://www.kokkinizita.net/linuxaudio/"
arch=('i686' 'x86_64')
license=('GPL')
depends=('clthreads>=2.2.1' 'clxclient>=3.6.1' 'jack-audio-connection-kit' 'libpng')
source=(http://www.kokkinizita.net/linuxaudio/downloads/${pkgname}-${pkgver}.tar.bz2)
md5sums=('b8acbe4e89fc187e51e54c8a9b8227a0')

build() {

  cd "${srcdir}/${pkgname}-${pkgver}/source"

  mkdir -p "${pkgdir}/usr/bin"

  sed -i "s|PREFIX = /usr/local|PREFIX = /usr|" Makefile
  sed -i "s|/usr/bin/install|/bin/install|" Makefile

  make
  make PREFIX="${pkgdir}/usr" install
}
