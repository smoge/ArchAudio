# need work

pkgname=pd-pdp
_origName=pdp
pkgver=0.12.6
pkgrel=1
pkgdesc="An extension library for Pure Data, providing video and other media processing functionality."
arch=('i686' 'x86_64')
url="http://zwizwa.be/pd/$pkgname/"
depends=('pd' 'libpng' 'libquicktime' 'gsl')
license=('GPL2')
provides=('pdp')
conflicts=('pdp')
groups=('pd-externals')
source=(http://sourceforge.net/projects/pure-data/files/libraries/$v_origName/$_origName-$pkgver.tar.gz)

build() {
  cd ${startdir}/src/$_origName-${pkgver}
  ./configure --prefix=/usr # --enable-mmx
  make
  make DESTDIR=$startdir/pkg install
}

md5sums=('d0e3649bc20d119f2fc0b41ea1aeb8b3')