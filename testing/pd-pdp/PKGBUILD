# need work

pkgname=pd-pdp
_pkgname=pdp
pkgver=0.12.6
pkgrel=1
pkgdesc="An extension library for Pure Data, providing video and other media processing functionality."
arch=('i686' 'x86_64')
url="http://zwizwa.be/pd/$pkgname/"
depends=('pd')
license=('GPL2')
groups=('pd-externals')
source=(http://sourceforge.net/projects/pure-data/files/libraries/pdp/pdp-$pkgver.tar.gz Makefile)


build() {

  cd ${srcdir}/$_pkgnam-$pkgver
  mv Makefile Makefile.old
  cp $startdir/Makefile $srcdir/$_pkgnam-$pkgver
  make
}

package() {
  cd $srcdir/$_pkgnam-$pkgver
  make
}