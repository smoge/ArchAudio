pkgname=pd-$_origName
_origName=pd-sigpack
pkgver=0.0.4.2
pkgrel=1
pkgdesc="External for PureData"
arch=('i686' 'x86_64')
url="http://www.puredata.org/"
depends=('pd')
license=('GPL2')
provides=($_origName)
conflicts=($_origName)
groups=('pd-externals')
source=(http://sourceforge.net/projects/pure-data/files/libraries/$_origName/$_origName-$pkgver.tar.gz)

md5sums=('135653261627fd0df57bf1f5027f7874')

build() {
  cd "${srcdir}/${_origName}"
  make
  make DESTDIR=$startdir/pkg install
}

