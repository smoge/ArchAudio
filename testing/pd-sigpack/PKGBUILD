pkgname=pd-sigpack
pkgver=0.0.4.2
pkgrel=1
pkgdesc="External for PureData"
arch=('i686' 'x86_64')
url="http://www.puredata.org/"
depends=('pd')
license=('GPL2')
provides=($_origName)
conflicts=($_origName)
groups=('pd-externals')
source=(http://sourceforge.net/projects/pure-data/files/libraries/sigpack/sigpack-$pkgver.tar.gz)
md5sums=('d4eb81033f4243465ec620ee19337adb')

build() {
  cd $srcdir/sigpack-0.0.4.2
  make
}

package() {
  cd $srcdir/sigpack-0.0.4.2
  make DESTDIR=$startdir/pkg install
}

