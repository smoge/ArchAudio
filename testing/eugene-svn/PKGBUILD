pkgname=eugene-svn
pkgver=2787
pkgrel=1
pkgdesc="Eugene is a basic (fast, parallel) Genetic Algorithm implementation in C++"
arch=('i686' 'x86_64')
url="http://dev.drobilla.net/browser/trunk/eugene"
license="GPL"
depends=('flowcanvas>=0.5.1' 'glibmm>=2.14.0' 'gtkmm>=2.11.12' 'libglademm>=2.6.0' libgnomecanvasmm boost)
makedepends=(subversion)
conflicts=()
provides=(eugene)

_svnmod="trunk"
_svntrunk="http://svn.drobilla.net/lad/trunk"

build() {
  cd $srcdir
 
  msg "Connecting to SVN server..."
  msg "Checking out $_svnmod"
  svn co $_svntrunk $srcdir
  msg "SVN checkout done or server timeout"
  
  msg "Starting build..."

  cd $srcdir/eugene
  python2 ./waf configure --prefix=/usr
  python2 ./waf
  DESTDIR="$pkgdir" python2 waf install
}
