# $Id$
# Maintainer: Arch Linux Pro Audio <dev@archaudio.org>
# Contributor: hm_b < holger <at> music-nerds.net >

pkgname=supercollider
pkgver=3.4
pkgrel=1
pkgdesc="An environment and programming language for real time audio synthesis and algorithmic composition"
url="http://supercollider.sourceforge.net/"
license=('GPL')
depends=('jack' 'avahi' 'fftw')
arch=('i686' 'x86_64')
makedepends=('subversion' 'libsndfile>=1.0' 'emacs' 'vim' 'gedit' 'icu' 'gcc>=3.0' 'pkgconfig>=0.14.0' 'scons>=0.96' 'alsa-lib' 'cwiid')
optdepends=('cwiid: Wii Controller Support' 
  'emacs: Emacs Interface' 
  'vim: Vim Interface'
  'gedit: GEdit Interface'
  'supercollider-with-extras: replace supercollider by this package for all the extra goodies'
)
source=(http://downloads.sourceforge.net/supercollider/$pkgver/SuperCollider-$pkgver-Source-linux.tar.gz)
md5sums=('ea1ee180e1caa7c4cec0bc8f6664570e')

build() {
  cd $srcdir/SuperCollider-Source/common

  scons PREFIX=/usr DEVELOPMENT=yes X11=yes SCEL=yes SCED=yes LID=yes WII=yes READLINE=no || return 1
  scons DESTDIR=$pkgdir/ install || return 1
scons -C ../editors/scvim PREFIX=$pkgdir/usr VIMFILE_DIR=/usr/share/vim/addons install-system || return 1

}
