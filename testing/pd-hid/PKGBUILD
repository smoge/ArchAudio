pkgname=pd-hid
pkgver=0.7
pkgrel=1
pkgdesc="An extension library for Pure Data, providing video and other media processing functionality."
arch=('i686' 'x86_64')
url="http://puredata.info"
depends=('pd' 'libpng' 'libquicktime' 'gsl')
license=('GPL2')
groups=('pd-externals')
source=(http://sourceforge.net/projects/pure-data/files/libraries/hid/hid-0.7.tar.gz)
md5sums=('d41d8cd98f00b204e9800998ecf8427e')

build() {
  cd $srcdir/hid-0.7
  make
}

package() {
  cd $srcdir/hid-0.7
  make DESTDIR=$startdir/pkg install
}
