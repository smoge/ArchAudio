# Contributor: Ormris <useingubuntu@gmail.com>

pkgname=confuse
pkgver=2.7
pkgrel=2
pkgdesc="A library for parsing configuration files"
arch=('i686' 'x86_64')
url="http://www.nongnu.org/confuse"
license=('GPL')
depends=('glibc')
options=('!libtool')
source=("http://savannah.nongnu.org/download/confuse/$pkgname-$pkgver.tar.gz")
md5sums=('45932fdeeccbb9ef4228f1c1a25e9c8f')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr \
              --enable-shared
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}
