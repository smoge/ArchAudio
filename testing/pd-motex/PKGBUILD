pkgname=pd-motex
pkgver=1.1.4
pkgrel=1
pkgdesc="External for PureData"
arch=('i686' 'x86_64')
url="http://www.puredata.org/"
depends=('pd')
license=('GPL2')
provides=($_origName)
conflicts=($_origName)
groups=('pd-externals')
source=(http://sourceforge.net/projects/pure-data/files/libraries/motex/motex-$pkgver.tar.gz)
md5sums=('2953f4842e79fa738728a31dfb9aaec9')


build() {
  cd $srcdir/motex-1.1.4
  make
}

package() {
  cd $srcdir/motex-1.1.4
  make DESTDIR=$startdir/pkg install
}


