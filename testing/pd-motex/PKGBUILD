pkgname=pd-motex
pkgver=1.1.4
pkgrel=2
pkgdesc="External for PureData"
arch=('i686' 'x86_64')
url="http://www.puredata.org/"
depends=('pd')
license=('GPL2')
provides=($_origName)
conflicts=($_origName)
groups=('pd-externals')
source=(http://sourceforge.net/projects/pure-data/files/libraries/motex/motex-$pkgver.tar.gz Makefile)
md5sums=('2953f4842e79fa738728a31dfb9aaec9'
         'e51de9f2bd55cc64f0e6ca1c67608967')


build() {

  cd $srcdir/motex-$pkgver
  mv Makefile Makefile.old
  cp $startdir/Makefile $srcdir/motex-$pkgver
  make
}

package() {
  cd $srcdir/motex-$pkgver
  make
}
