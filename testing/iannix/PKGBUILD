# Contributor: agroschim <agroschim@gmx.de>

pkgname=iannix
pkgver=0.639b
pkgrel=1
pkgdesc="A score editor based on the UPIC sequencer by Iannis Xenakis"
arch=('i686' 'x86_64')
url="http://www.le-hub.org/lang/fr/iannix"
license=('GPL')
depends=('qt')
source=(http://downloads.sourceforge.net/project/iannix/IanniX-Linux/IanniX-${pkgver}-Linux/IanniX-${pkgver}-Linux.tgz)
md5sums=('b435e3882ce423d9226cb8bfa57eb3ad')

build() {
  cd ${srcdir}/IanniX
  qmake
  make
  install -pD bin/IanniX $pkgdir/usr/bin/iannix
}
