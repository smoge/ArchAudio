# Contributor: Bernardo Barros <bernardobarros@gmail.com>

pkgname=ceres
pkgver=0.56
pkgrel=1
pkgdesc="Ceres is a large program for doing various sound effects in the frequency domain and displaying sonograms."
arch=('i686' 'x86_64')
url="http://www.notam02.no/arkiv/src/"
license=('GPL')
makedepends=('python2' 'libxml2' 'pygtk' 'glade' 'libsndfile')
source=(http://archive.notam02.no/arkiv/src/$pkgname-$pkgver.tar.gz Makefile.patch)

md5sums=('b0193899890d6063f3ff3fded68cb6c9'
         '86d25143ed536e1720d59895cbdf38cb')


build() {
  alias python='python2'
  cd "${srcdir}/${pkgname}-${pkgver}/src"
  patch < ${srcdir}/Makefile.patch
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}
