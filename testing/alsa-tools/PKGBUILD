pkgname=alsa-tools
pkgver=1.0.24.1
pkgrel=1
pkgdesc="ALSA tools package"
arch=('i686' 'x86_64')
url="http://alsa-project.org/"
license=('GPL')
depends=('fltk' 'alsa-lib' 'gtk2' 'qt3' 'xorg-fonts-misc')
source=(ftp://ftp.alsa-project.org/pub/tools/$pkgname-$pkgver.tar.bz2)
md5sums=('08fe93a12006093e590d7ecc02b119dd')

build() {

  cd $startdir/src/$pkgname-$pkgver

  rm Makefile gitcompile

  for file in `ls -1`; do
    if [ $file = "seq" ]; then
      cd $file/sbiload;
    else
      cd $file;
    fi
    ./configure --prefix=/usr --with-qtdir=/opt/qt --x-libraries=/usr/lib
    make UIC=/opt/qt/bin/uic MOC=/opt/qt/bin/moc
    make DESTDIR=$startdir/pkg install
    cd -
  done

  find $startdir/pkg -name '*.la' -exec rm {} \;
}
