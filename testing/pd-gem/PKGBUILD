pkgname=pd-gem
_pkgname=gem
pkgver=0.92.3
_pkgver=0.92-3
pkgrel=1
pkgdesc="Graphics Environment for Multimedia - an external for PureData"
arch=('i686' 'x86_64')
url="http://puredata.info/community/projects/software/gem"
depends=('pd' 'libgl' 'libtiff' 'libjpeg' 'ftgl' 'mesa' 'avifile')
license=('GPL')
source=(http://puredata.info/community/projects/software/gem/releases/$pkgver/gem-$_pkgver.tar.gz)
md5sums=('d1dcea1d7adeab824648d0b3e069c064')


build() {

  cd ${startdir}/src/${_pkgname}-${_pkgver}/src
  autoconf
  ./configure --prefix=/usr --without-ffmpeg
  make
  make DESTDIR=$startdir/pkg install
  chmod a+x $startdir/pkg/usr/lib/pd/doc/gem/examples{,/*}
  chmod a+r -R $startdir/pkg/usr/lib/pd/doc/gem/examples
}
