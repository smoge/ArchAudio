# Contributor: Shinlun Hsieh <yngwiexx@yahoo.com.tw>

pkgname=qmidiarp
pkgver=0.4.1
pkgrel=2
pkgdesc="A MIDI arpeggiator, phrase generator and controller LFO for the ALSA sequencer."
arch=(i686 x86_64)
url="http://sourceforge.net/projects/qmidiarp/"
license=('GPL')
depends=('qt' 'jack')
conflicts=("$pkgname-cvs")
install="$pkgname.install"
source=("http://downloads.sourceforge.net/project/$pkgname/$pkgname/$pkgver/$pkgname-$pkgver.tar.bz2"
        "http://downloads.sourceforge.net/project/$pkgname/$pkgname/$pkgver/$pkgname-$pkgver-fixes.patch")
md5sums=('bd5bc9e0b57f4a2d18f64a3fcda78b86'
         '1ab25b30675c0c5366d8d0a0b2f8d8d2')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  # apply new patch
  patch -p1 -i ../*.patch

  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir" install
}
