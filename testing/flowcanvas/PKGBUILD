pkgname=flowcanvas
pkgver=0.5.1
pkgrel=1
pkgdesc="Interactive gtkmm widget for boxes and lines environments"
url="http://drobilla.net/software/flowcanvas/"
depends=('jack-audio-connection-kit' 'gtkmm' 'libglademm' 'lash' 'libgnomecanvasmm' 'boost')
makedepends=('pkgconfig')
license=("GPL")
source=(http://download.drobilla.net/$pkgname-$pkgver.tar.gz gcc44.patch)
md5sums=('cf7adff82c7ff10743e6b4f70d0fffe7' 'de7cf1ca91a3dc0ce937656b01bbc9f2')
arch=('i686' 'x86_64')

build() {
cd $srcdir/$pkgname-${pkgver}
patch -p0 < $srcdir/gcc44.patch || return 1
./configure --prefix=/usr
make || return 1
make DESTDIR=$pkgdir install || return 1
}
