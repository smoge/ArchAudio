pkgname=samplecat
pkgver=0.1.0
pkgrel=1
pkgdesc="A program for cataloguing and auditioning audio samples"
arch=('i686' 'x86_64')
url="http://samplecat.orford.org/"
license=('GPL2')
depends=('gtkglext' 'jack' 'libmysqlclient')
source=(http://orford.org/assets/$pkgname-$pkgver.tar.gz)
md5sums=('bb2271001fa459bcd2d3c3e2fcb41a81')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr --enable-sqlite
  make
  make DESTDIR="$pkgdir" install
}

