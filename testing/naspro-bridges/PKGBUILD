# Maintainer: SpepS <dreamspepser at yahoo dot it>

pkgname=naspro-bridges
pkgver=0.2.90
pkgrel=1
pkgdesc="A collection of bridges to LV2 which allow you to use plugins developed for other plugin standards in LV2 hosts."
arch=('i686' 'x86_64')
url="http://naspro.atheme.org/"
license=('GPL')
groups=('naspro')
depends=('naspro-bridge-it' 'alsa-lib')
optdepends=('dssi: dssi bridges'
            'ladspa: lapspa bridges')
options=('!libtool')
source=("http://sourceforge.net/projects/naspro/files/naspro/$pkgver/$pkgname-$pkgver.tar.bz2/download")
md5sums=('b2d8f2bfa90337b8d6592dd6651428e8')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  
  ./configure --prefix=/usr \
              --enable-static=no

  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}
