pkgname=swingosc
pkgver=0.65
pkgrel=1
pkgdesc="An OpenSoundControl (OSC) server intended for scripting Java(tm), such as to create graphical user interfaces with AWT or Swing classes."
arch=('any')
url="http://www.sciss.de/swingOSC/"
license=('GPL' 'LGPL' 'Apache')
depends=('jre')
install=SwingOSC.install
source=(http://downloads.sourceforge.net/swingosc/SwingOSC-${pkgver}.zip)
md5sums=('6c284f505525dff8462267958479ed1a' )
optdepends=('supercollider' 'pd')


build() {
  install -d ${pkgdir}/usr/{,bin,share/SuperCollider/Extensions/SwingOSC/Help}
  cd $srcdir/SwingOSC
  ./install_linux_system.sh $pkgdir/usr
}
