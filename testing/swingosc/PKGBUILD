pkgname=swingosc
_pkgname=SwingOSC
pkgver=0.65
_pkgver=0.65
pkgrel=1
pkgdesc="An OpenSoundControl (OSC) server intended for scripting Java(tm), such as to create graphical user interfaces with AWT or Swing classes."
arch=('any')
url="http://www.sciss.de/swingOSC/"
license=('GPL' 'LGPL' 'Apache')
depends=('jre')
makedepends=()
source=(http://downloads.sourceforge.net/swingosc/$_pkgname-$_pkgver.zip)
md5sums=('6c284f505525dff8462267958479ed1a' )

build() {
  cd $startdir/pkg/
  install -d usr/{,bin,share/SuperCollider/Extensions/SwingOSC/Help}
  cd $startdir/src/$_pkgname
  ./install_linux_system.sh $pkgdir/usr
}
