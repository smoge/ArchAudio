# Maintainer: Arch Linux Pro Audio <dev@archaudio.org>
# Contributor: svoufff <svoufff at gmail dot com>
# Contributor: David Adler <david dot jo dot adler at gmail dot com>
pkgname=yoshimi
pkgver=0.055
pkgrel=1
pkgdesc="Experimental ZynAddSubFX with improved Jack audio & midi IO"
arch=('i686' 'x86_64')
url="http://www.graggrag.com/?q=node/19"
license=('GPL')
depends=('fltk' 'mxml' 'fftw-threads' 'jack-audio-connection-kit')
makedepends=(cmake)
source=(http://www.graggrag.com/yoshimi/$pkgname-$pkgver.tar.bz2)
md5sums=('3ac3189f0c2be8650ea765bbbe0c7677')

build() {
  cd "$srcdir/$pkgname-$pkgver/src" 
  mkdir -p "${pkgdir}/usr/bin"
  cmake -D CMAKE_INSTALL_PREFIX="$pkgdir/usr" . 	|| return 1
  make		|| return 1
  make install
}
