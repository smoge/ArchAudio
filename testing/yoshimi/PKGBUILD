# Maintainer: Arch Linux Pro Audio <dev@archaudio.org>
# Contributor: svoufff <svoufff at gmail dot com>
# Contributor: David Adler <david dot jo dot adler at gmail dot com>
pkgname=yoshimi
pkgver=0.058
pkgrel=1
pkgdesc="Experimental ZynAddSubFX with improved Jack audio & midi IO"
arch=('i686' 'x86_64')
url="http://yoshimi.sourceforge.net/"
license=('GPL')
depends=('fltk' 'mxml' 'fftw-threads' 'jack')
makedepends=(cmake)
source=(http://downloads.sourceforge.net/project/yoshimi/$pkgname-$pkgver.tar.bz2)
md5sums=('c6c55f7975df4d656c36dce645d3ff5d')

build() {
  cd "$srcdir/$pkgname-$pkgver/src" 
  sed -i 's/WORLD_READ WORLD_WRITE/WORLD_READ/' CMakeLists.txt 
  ccmake            || return 1
  cmake -D CMAKE_INSTALL_PREFIX="$pkgdir/usr" .  || return 1
  make              || return 1
  make install      || return 1
}
