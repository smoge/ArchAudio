# Contributor: SpepS <dreamspepser at yahoo dot it>

pkgname=yoshimi
pkgver=0.060.8
pkgrel=1
pkgdesc="Experimental ZynAddSubFX with improved JACK audio & MIDI IO"
arch=('i686' 'x86_64')
url="http://www.graggrag.com/?q=node/19"
license=('GPL')
depends=('jack' 'fltk' 'fftw-threads' 'libgl' 'libsm')
makedepends=('cmake' 'boost' 'mxml')
source=("http://downloads.sourceforge.net/project/$pkgname/$pkgname-$pkgver.tar.bz2")
md5sums=('8b343b378f1d3a78e8108c3e4a10bdf7')

build() {
  cd "$srcdir/$pkgname-$pkgver/src" 

  cmake . -DCMAKE_INSTALL_PREFIX="$pkgdir/usr"
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver/src" 

  make install
}
