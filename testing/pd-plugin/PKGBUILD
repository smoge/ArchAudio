pkgname=pd-$_origName
_origName=plugin~
pkgver=0.2.1
pkgrel=1
pkgdesc="External for PureData"
arch=('i686' 'x86_64')
url="http://www.puredata.org/"
depends=('pd')
license=('GPL2')
provides=($_origName)
conflicts=($_origName)
groups=('pd-externals')
source=(http://sourceforge.net/projects/pure-data/files/libraries/$_origName/$_origName-$pkgver.tar.gz)
md5sums=('b617efab88369d0d0d7550e8e08c2a81')

build() {
  cd "${srcdir}/${_origName}"
  make
  make DESTDIR=$startdir/pkg install
}

