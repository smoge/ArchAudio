pkgname=pd-plugin
pkgver=0.2.1
pkgrel=1
pkgdesc="External for PureData"
arch=('i686' 'x86_64')
url="http://www.puredata.org/"
depends=('pd')
license=('GPL2')
groups=('pd-externals')
source=(http://sourceforge.net/projects/pure-data/files/libraries/pd-plugin~/pd-plugin~-$pkgver.tar.gz)
md5sums=('6ab29b23d0d814d0fc24bc3341ba0112')

build() {
  cd ${srcdir}/plugin~-0.2.1
  make
}

package() {
  cd ${srcdir}/plugin~-0.2.1
  make DESTDIR=$startdir/pkg install
}

