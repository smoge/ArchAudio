# $Id$
# Maintainer: Arch Linux Pro Audio <dev@archaudio.org>
# Contributor: Shinlun Hsieh <yngwiexx@yahoo.com.tw>
# Contributor: Philipp Überbacher <hollunder at gmx dot at>

pkgname=mcp-plugins
_pkgname=MCP-plugins
pkgver=0.4.0
pkgrel=1
pkgdesc="LADSPA plugins designed for Alsa Modular Synth"
arch=('i686' 'x86_64')
url="http://kokkinizita.net/linuxaudio/index.html"
license=('GPL')
depends=('gcc-libs')
source=(http://kokkinizita.net/linuxaudio/downloads/${_pkgname}-${pkgver}.tar.bz2)
md5sums=('2a0fc50281a150eb781dbcfe2fb9c532')

build() {
  cd "${startdir}/src/${_pkgname}-${pkgver}"
  make
  mkdir -p "${pkgdir}/usr/lib/ladspa/"
  install -m755 *.so "${pkgdir}/usr/lib/ladspa/"
}
