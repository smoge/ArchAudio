pkgname=aliki
pkgver=0.0.3
pkgrel=0
pkgdesc="An integrated system for Impulse Response measurements."
arch=('i686' 'x86_64')
url="http://www.kokkinizita.net/linuxaudio/downloads/index.html"
license=('GPL')
depends=('clalsadrv>=1.2.2' 'clthreads>=2.2.1' 'clxclient>=3.3.2' 'jack' 'libx11' 'fftw')

source=(http://www.kokkinizita.net/linuxaudio/downloads/${pkgname}-${pkgver}.tar.bz2 ${pkgname}.patch)
md5sums=('1c127b5d87dbc0ca9b14f052c622ce3b'
         '844ca0a716f7f80933626c941f28a65a')
build() {
  cd "$srcdir/$pkgname"
  patch < ${srcdir}/${pkgname}.patch
  make PREFIX="/usr" DESTDIR=${pkgdir} install
}
