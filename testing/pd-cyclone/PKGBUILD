pkgname=pd-cyclone
pkgver=0.1_alpha54
pkgrel=1
pkgdesc="Library of PureData classes, bringing some level of compatibility between Max/MSP and Pd environments."
arch=('i686' 'x86_64')
url="http://suita.chopin.edu.pl/~czaja/miXed/externs/cyclone.html"
depends=('pd')
license=('GPL2')
groups=('pd-externals')
source=(http://sourceforge.net/projects/pure-data/files/libraries/cyclone/cyclone-0.1-alpha54.tar.gz Makefile)

build() {

  # replace Makefile:
  cd $srcdir/cyclone-$pkgver
  mv Makefile Makefile.old
  #cp ${srcdir}/Makefile .
  # buid:
  make
}

package() {
  cd ${srcdir}/cyclone
  make DESTDIR=$startdir/pkg install
}

