# Contributor: SpepS <dreamspepser at yahoo dot it>

pkgname=freeverb3
_pkgver=2.5.14
pkgver=$_pkgver.1
pkgrel=1
pkgdesc="A sound processing library which includes sampling rate scaling enabled version of freeverb with a lot of extensions."
arch=('i686' 'x86_64')
url="http://freeverb3.sourceforge.net/"
license=('GPL')
depends=('fftw')
options=('!libtool')
source=("http://downloads.sourceforge.net/project/$pkgname/$pkgname/$_pkgver/$pkgname-$pkgver.tar.gz")
md5sums=('6c0401f4f80929365e933996da114ba9')

build() {
  cd "$srcdir/$pkgname-$_pkgver"

  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$_pkgver"

  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
