# Maintainer: SpepS <dreamspepser at yahoo dot it>

pkgname=naspro-core
pkgver=0.2.90
pkgrel=2
pkgdesc="The portable runtime library at the bottom of the NASPRO Sound PROcessing Architecture."
arch=('i686' 'x86_64')
url="http://naspro.atheme.org/"
license=('GPL')
groups=('naspro')
depends=('glibc')
options=('!libtool')
source=("http://sourceforge.net/projects/naspro/files/naspro/$pkgver/$pkgname-$pkgver.tar.bz2/download")
md5sums=('7d1676d76bec47c470257a93bc003761')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  
  ./configure --prefix=/usr \
              --enable-static=no

  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}
