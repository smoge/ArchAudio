# Maintainer: SpepS <dreamspepser at yahoo dot it>

pkgname=naspro-core
pkgver=0.2.91
pkgrel=1
pkgdesc="The portable runtime library at the bottom of the NASPRO Sound PROcessing Architecture."
arch=('i686' 'x86_64')
url="http://naspro.atheme.org/"
license=('GPL')
groups=('naspro')
depends=('glibc')
makedepends=('naturaldocs')
options=('!libtool')
source=("http://sourceforge.net/projects/naspro/files/naspro/$pkgver/$pkgname-$pkgver.tar.bz2/download")
md5sums=('61cd46b31ed18cd4dc26bc89f9f7dc60')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  
  NATURALDOCS="/usr/bin/naturaldocs" \
  ./configure --prefix=/usr \
              --enable-static=no

  make && make html
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}
