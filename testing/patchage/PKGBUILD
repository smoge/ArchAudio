# Maintainer: Max Pray a.k.a. Synthead <synthead@gmail.com>

pkgname=patchage
pkgver=0.4.2
pkgrel=4
pkgdesc="A modular patch bay for audio and MIDI systems"
url="http://drobilla.net/software/patchage"
depends=('raul>=0.5.1' 'flowcanvas>=0.5.1' 'dbus-glib' 'graphviz')
makedepends=('pkgconfig')
license=('GPL')
source=(http://download.drobilla.net/${pkgname}-${pkgver}.tar.gz ${pkgname}.desktop)
md5sums=('ef26a05d04b2047b5e9a17285408feb7' 'b9be8f73f937b87d6d4b38e729792ae9')
arch=('i686' 'x86_64')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix="/usr" || return 1
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
  install -D -m644 ${pkgdir}/usr/share/icons/hicolor/48x48/apps/${pkgname}.png ${pkgdir}/usr/share/pixmaps/${pkgname}.png || return 1
  install -D -m644 ${srcdir}/${pkgname}.desktop ${pkgdir}/usr/share/applications/${pkgname}.desktop || return 1
} 
