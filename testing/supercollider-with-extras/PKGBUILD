# $Id$
# Maintainer: Arch Linux Pro Audio <dev@archaudio.org>
# Contributor: hm_b < holger <at> music-nerds.net >

pkgname=supercollider-with-extras
pkgver=3.4
pkgrel=1
pkgdesc="An environment and programming language for real time audio synthesis and algorithmic composition"
url="http://supercollider.sourceforge.net/"
license=('GPL')
provides=('supercollider')
conflicts=('supercollider' 'supercollider-git')
depends=('jack' 'avahi' 'fftw')
arch=('i686' 'x86_64')
makedepends=('subversion' 'jack' 'libsndfile>=1.0' 'emacs' 'vim' 'gedit' 'icu' 'gcc>=3.0' 'pkgconfig>=0.14.0' 'scons>=0.96' 'alsa-lib' 'readline')
optdepends=('cwiid: Wii Controller Support'
  'emacs: Emacs Interface'
  'vim: Vim Interface'
  'gedit: GEdit Interface'
)
source=(http://downloads.sourceforge.net/supercollider/$pkgver/SuperCollider-$pkgver-Source-With-Extras-linux.tar.gz)
md5sums=('20631117a7e9fb1c862833ce424ce9f4')


build() {

  cd $srcdir/SuperCollider-Source/common

  scons PREFIX=/usr DEVELOPMENT=yes X11=yes SCEL=yes SCED=yes LID=yes WII=yes READLINE=no
  scons DESTDIR=$pkgdir/ install
  scons -C ../editors/scvim PREFIX=$pkgdir/usr VIMFILE_DIR=/usr/share/vim/addons install-system
}
