# Contributor: Philipp Ãœberbacher <murks at lavabit dot com>

pkgname=autotalent
pkgver=0.2
pkgrel=1
pkgdesc="An autotune-ish LADSPA effect."
arch=('i686' 'x86_64')
url="http://web.mit.edu/tbaran/www/autotalent.html"
license=('GPL')
depends=('glibc')
makedepends=('ladspa')
source=(http://web.mit.edu/tbaran/www/${pkgname}-${pkgver}.tar.gz destdir.patch)
md5sums=('117ceb0efe2e46a6efa42d71f70b81a5'
         'ec838e39eeabc1625a2e1445740dee16')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  patch -Np0 -i ../../destdir.patch
  make
}

package(){
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}
