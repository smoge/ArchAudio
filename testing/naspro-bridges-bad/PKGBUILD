# Maintainer: SpepS <dreamspepser at yahoo dot it>

pkgname=(naspro-bridges-bad)
pkgver=0.2.0
pkgrel=1
pkgdesc="NASPRO (recursive acronym for NASPRO Architecture for Sound PROcessing). NASPRO bridges bad: a collection of <API>-to-LV2 bridges which work fine, but do not completely support the original APIs."
arch=('i686' 'x86_64')
url="http://naspro.atheme.org/"
license=('GPL')
groups=('naspro')
depends=('naspro-core' 'redland')
makedepends=('cmake' 'pkg-config' 'ladspa' 'dssi')
source=("http://download.sourceforge.net/project/naspro/naspro/0.2.0/$pkgname-$pkgver.tar.gz")
md5sums=('13001e11fedfdc818fe9d883e0e7e525')

build() {
  cd $srcdir/$pkgname-$pkgver
  
  cmake -DCMAKE_INSTALL_PREFIX=/usr . || return 1
  make || return 1
  make DESTDIR=$pkgdir install || return 1
}

