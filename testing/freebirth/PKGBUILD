# Contributor: Shinlun Hsieh <yngwiexx@yahoo.com.tw>

pkgname=freebirth
pkgver=0.3.2
pkgrel=1
pkgdesc="Free software bass synthesizer step sequencer"
arch=('i686' 'x86_64')
url="http://downloads.sourceforge.net/freebirth/"
license=('GPL')
depends=('gtk')
source=(http://downloads.sourceforge.net/freebirth/${pkgname}-${pkgver}.tar.gz)
md5sums=('672fc239f583a76b5519ac03a76d25d7')

build() {

  cd ${startdir}/src/${pkgname}-${pkgver}
  sed -i -e 's|^#define FB_SAMPLES\(.*\)|#define FB_SAMPLES "/usr/share/freebirth"|' raw_wave.h
  make

  mkdir -p ${startdir}/pkg/usr/bin
  install -m755 {freebirth,wav_to_raw} ${startdir}/pkg/usr/bin/
  mkdir -p ${startdir}/pkg/usr/share/freebirth/raw
  install -m644 raw/*.raw ${startdir}/pkg/usr/share/freebirth/raw/

}
