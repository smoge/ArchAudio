pkgname=csound-doc
pkgver=5.12
pkgrel=2
pkgdesc="The Canonical Csound Reference Manual"
url=("http://sourceforge.net/project/showfiles.php?group_id=81968")
arch=('any')
license=('LGPL' 'GPL')
depends=()
makedepends=()
provides=('csound5-doc')
install=$pkgname.install
conflicts=('csound-doc')
source=("http://downloads.sourceforge.net/csound/Csound${pkgver}_manual_html.zip")
md5sums=('a806f73c95cf2d9f0d93c0d39e94cd6d')

build() {
    install -d $pkgdir/usr/share/doc/csound
    cp -R $srcdir/html $pkgdir/usr/share/doc/csound
}
