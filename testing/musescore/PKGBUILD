# Maintainer: Arch Linux Pro Audio <dev@archaudio.org>
# Contributor: Dr.Egg <rwhite @ archlinux . us>

pkgname=musescore
pkgver=0.9.5
pkgrel=1
pkgdesc="A music score editor written in Qt4"
arch=('i686' 'x86_64')
url="http://www.musescore.org/en/"
license=('GPL')
depends=('qt>=4.5.0' 'openssl')
makedepends=('cmake' 'doxygen')
optdepends=('portaudio' 'jack-audio-connection-kit')
conflicts=('musescore-svn' 'mscore')
source=(http://downloads.sourceforge.net/project/mscore/mscore/mscore-${pkgver}/MuseScore-${pkgver}.tar.bz2)
md5sums=('b7f50484eff0681d837b5ac41dbfc04d')

build() {
  cd $srcdir
  tar xvfj mscore-${pkgver}.tar.bz2
  cd mscore-${pkgver}
  export QT_PLUGINS_DIR=/usr/lib/qt/plugins
  [ -d build ] && make clean
  sed -i 's+${Mscore_INSTALL_NAME}man+doc/mscore+' \
  "$srcdir"/mscore-$pkgver/mscore/manual/CMakeLists.txt || return 1
  make PREFIX=/usr release || return 1
  make DESTDIR="$pkgdir" install || return 1 

  }