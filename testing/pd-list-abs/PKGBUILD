# Contributor: Bernardo Barros <bernardobarros@gmail.com>

pkgname=pd-list-abs
pkgver=0.1
pkgrel=2
pkgdesc="A collection of list-processing abstractions for Pd."
arch=('i686' 'x86_64')
url="http://www.puredata.org/"
depends=('pd')
license=('GPL')
groups=('pd-externals')
source=(http://sourceforge.net/projects/pure-data/files/libraries/list-abs/list-abs-$pkgver.tar.gz Makefile)

md5sums=('7247bfc96c5f86efa0a82b8eeffb586e'
         '5c537f89fe72b191eb9503a73076a91a')

build() {
  cd $srcdir/list-abs-$pkgver
  mv Makefile Makefile.old
  cp $startdir/Makefile $srcdir/list-abs-$pkgver
  make
}

package() {
  cd ${srcdir}/list-abs-$pkgver
  make DESTDIR=$startdir/pkg install
}

