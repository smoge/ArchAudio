# Maintainer: Arch Linux Pro Audio <dev@archaudio.org>
# Contributor: Ray Rashif <schivmeister@gmail.com>

pkgname=jack2
_pkgname=jack
pkgver=1.9.2
pkgrel=1
pkgdesc="Jack Audio Connection Kit MP: A low-latency audio server for SMP machines"
arch=(i686 x86_64)
url="http://www.grame.fr/~letz/jackdmp.html"
license=('GPL')
depends=('libsamplerate')
makedepends=('ffado')
optdepends=('ffado: FireWire audio device support')
provides=("jack-audio-connection-kit=0.116.2")
conflicts=('jack-audio-connection-kit' 'jack')
backup=(etc/conf.d/$_pkgname)
install=$pkgname.install
source=(http://www.grame.fr/~letz/$_pkgname-$pkgver.tar.bz2
	jackconf
	jackinit)

build() {
  cd "$srcdir/$_pkgname-$pkgver"

  ./waf configure --prefix=/usr
  ./waf build $MAKEFLAGS || return 1
  ./waf install --destdir="$pkgdir/"
  			
  install -Dm755 ../jackinit "$pkgdir/etc/rc.d/$_pkgname"
  install -Dm644 ../jackconf "$pkgdir/etc/conf.d/$_pkgname"
}
md5sums=('a3dd7012a801abf340a093e0fcb254dc'
         '12b1017f6f06248e2ddd4a28dfae87d4'
         '6cd8a8a42a756d3ba0d4842bba171ca3')
