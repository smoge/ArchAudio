# Contributors: SpepS <dreamspepser at yahoo dot it>

pkgname=qutecsound
pkgver=0.6.0
pkgrel=2
pkgdesc="QuteCsound is a cross platform editor and front-end for Csound with syntax highlighting"
arch=('i686' 'x86_64')
url="http://qutecsound.sourceforge.net/"
license=('GPL')
depends=('csound' 'qt')
source=("http://downloads.sourceforge.net/project/$pkgname/QuteCsound/0.6.0/$pkgname-$pkgver-src.tar.gz")
md5sums=('73a87ef1b293819ec0975973143ac4aa')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  qmake qcs.pro
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  mkdir -p "$pkgdir"/usr/{bin,share/{$pkgname,doc/$pkgname}}

  install -Dm 755 bin/qutecsound-f "$pkgdir/usr/bin/$pkgname"

  cp -a {examples,images} "$pkgdir/usr/share/$pkgname"
  cp doc/* "$pkgdir/usr/share/doc/$pkgname"
}

