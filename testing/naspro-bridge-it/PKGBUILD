# Maintainer: SpepS <dreamspepser at yahoo dot it>

pkgname=naspro-bridge-it
pkgver=0.2.90
pkgrel=1
pkgdesc="A little helper library to develop insert-your-API-here to LV2 bridges."
arch=('i686' 'x86_64')
url="http://naspro.atheme.org/"
license=('GPL')
groups=('naspro')
depends=('naspro-core')
options=('!libtool')
source=("http://sourceforge.net/projects/naspro/files/naspro/$pkgver/$pkgname-$pkgver.tar.bz2/download")
md5sums=('80099e61069cfdb09308e5bd901057a0')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  
  ./configure --prefix=/usr \
              --enable-static=no

  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}
