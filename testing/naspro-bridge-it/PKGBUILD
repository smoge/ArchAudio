# Maintainer: SpepS <dreamspepser at yahoo dot it>

pkgname=naspro-bridge-it
pkgver=0.2.91
pkgrel=1
pkgdesc="A little helper library to develop insert-your-API-here to LV2 bridges."
arch=('i686' 'x86_64')
url="http://naspro.atheme.org/"
license=('GPL')
groups=('naspro')
depends=('naspro-core>=0.2.91')
makedepends=('lv2core')
options=('!libtool')
source=("http://sourceforge.net/projects/naspro/files/naspro/$pkgver/$pkgname-$pkgver.tar.bz2/download")
md5sums=('0d2c54bf26bdf66deb61b0b4fc73d490')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  NATURALDOCS="/usr/bin/naturaldocs" \
  ./configure --prefix=/usr \
              --enable-static=no

  make && make html
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}
