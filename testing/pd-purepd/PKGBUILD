pkgname=pd-purepd
pkgver=0.1.1
pkgrel=1
pkgdesc="External for PureData"
arch=('i686' 'x86_64')
url="http://www.puredata.org/"
depends=('pd')
license=('GPL2')
provides=($_origName)
conflicts=($_origName)
groups=('pd-externals')
source=(http://sourceforge.net/projects/pure-data/files/libraries/purepd/purepd-$pkgver.tar.gz)
md5sums=('128eaa8e8c57cef7c49223ad3657142a')

build() {
  cd $srcdir/purepd-0.1.1
  make
}

package() {
  cd $srcdir/purepd-0.1.1
  make DESTDIR=$startdir/pkg install
}

