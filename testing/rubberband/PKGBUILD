# G.R.E.A - Grupo Recifense de Estudos do Archlinux (recife's group of archlinux research)

pkgname=rubberband
pkgver=1.3
pkgrel=1
pkgdesc="An audio time-stretching and pitch-shifting library and utility program"
arch=("i686" "x86_64")
url="http://www.breakfastquay.com/rubberband/files"
license=("GPL")
depends=('libsamplerate' 'fftw' 'vamp-plugin-sdk')
makedepends=('ladspa')
source=(http://www.breakfastquay.com/rubberband/files/$pkgname-$pkgver.tar.bz2)
md5sums=('2ac78b33dd471e147690beef3bd3334d')

build() {
	cd $srcdir/$pkgname-$pkgver
	./configure --prefix=/usr
	make || return 1
	make DESTDIR=$pkgdir install || return 1
}
# vim: ts=2

