pkgname=ambdec
pkgver=0.4.4
pkgrel=1
pkgdesc='An Ambisonic decoder for up to 36 speakers using JACK.'
arch=('i686' 'x86_64')
url='http://www.kokkinizita.net/linuxaudio/'
license=('GPL')
depends=('clxclient>=3.6.0' 'clthreads>=2.4.0' 'jack' 'libpng')

source=("http://www.kokkinizita.net/linuxaudio/downloads/ambdec-$pkgver.tar.bz2" Makefile)

md5sums=('eebec8c3a54e401cbd5af78e5de9fdba'
         '09b931f382895cd9ae14524db5bd2a6e')

build() {

  cd "$srcdir/$pkgname-$pkgver/source"
  
  rm -f Makefile.old
  mv Makefile Makefile.old
  cp $startdir/Makefile "$srcdir/$pkgname-$pkgver/source"

  make
}

package() {

  cd "$srcdir/$pkgname-$pkgver/source"
  make DESTDIR="$pkgdir/" install
}
