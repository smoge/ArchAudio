# Contributor: SpepS <dreamspepser at yahoo dot it>

pkgname=fomus
pkgver=0.1.15_alpha
pkgrel=1
pkgdesc="Automates many musical notation tasks for composers."
arch=(i686 x86_64)
url="http://fomus.sourceforge.net/"
license=('GPL3')
depends=('boost-libs')
makedepends=('graphviz' 'imagemagick' 'libxml2' 'swig')
optdepends=('lilypond: lilypond support'
            'emacs: emacs support'
            'pd: pd support'
            'cm: common music and grace support')
options=('!libtool')
source=("http://downloads.sourceforge.net/project/$pkgname/$pkgname-${pkgver//_/-}.tar.gz")
md5sums=('34438b2161a1655aa2f468212918f35e')

build() {
  cd "$srcdir/$pkgname-${pkgver//_/-}"
  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-${pkgver//_/-}"
  make DESTDIR="$pkgdir/" install
}
