pkgname=pd-$_origName
_pkgname=freeverb~
pkgver=1.2
pkgrel=1
pkgdesc="Externals for PureData"
arch=('i686' 'x86_64')
url="http://www.puredata.org/"
depends=('pd')
license=('GPL2')
provides=($_origName)
conflicts=($_origName)
groups=('pd-externals')
source=(https://sourceforge.net/projects/pure-data/files/libraries/freeverb~/freeverb~-1.2.tar.gz)
md5sums=('3a0aaf59c681682ba733231837e020aa')

build() {
  cd ${startdir}/src/freeverb~-1.2
  make
  make DESTDIR=$startdir/pkg install
}

