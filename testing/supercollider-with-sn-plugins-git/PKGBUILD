# Contributor: Arch Linux Pro Audio <archaudio-devel@archaudio.org>

pkgname=supercollider-with-sn-plugins-git
pkgver=20101224
pkgver_plugins=453
pkgrel=1
pkgdesc="An environment and programming language for real time audio synthesis and algorithmic composition. Extended package with sc3-plugins and supernova server. Also wiimote support and AY plugin enabled."
url="http://supercollider.sourceforge.net/"
arch=('i686' 'x86_64')
license=('GPL')
depends=('jack' 'fftw' 'avahi' 'ruby' 'icu' 'gcc-libs-multilib')
makedepends=('git' 'cmake' 'libsndfile>=1.0' 'emacs' 'qt' 'cwiid' 'vim' 'gedit' 'gcc>=3.0' 'pkgconfig>=0.14.0' 'alsa-lib')
conflicts=('supercollider')
provides=('supercollider')
source=()
md5sums=()

# Official SuperCollider:
_gitroot="git://supercollider.git.sourceforge.net/gitroot/supercollider/supercollider"
_gitname="supercollider"

# For SuperCute (qt):
#_gitroot="git://github.com/jleben/SuperCute.git"
#_gitname="SuperCute"

# For the Plugins:
_gitroot2="git://sc3-plugins.git.sourceforge.net/gitroot/sc3-plugins/sc3-plugins"
_gitname2="sc3-plugins"


build() {
  cd $srcdir
  msg "Connecting to GIT server...."  

  if [ -d $_gitname ] ; then
    (cd $_gitname && git pull origin && git submodule update)
    msg "The local files are updated."
  else
    git clone --recursive $_gitroot
  fi
  
  msg "GIT checkout done or server timeout"
  msg "Starting built of supercollider-git (supernova branch)"
  msg "Starting make..."

  cp -r $_gitname $_gitname-build
  cd $_gitname-build/

  cmake -DCMAKE_BUILD_TYPE=Release -DCMAKE_INSTALL_PREFIX=/usr -DSC_WII=1 -DSUPERNOVA=1|| return 1

  make || return 1
  make DESTDIR=$pkgdir/ install || return 1
  
  rm -rf $srcdir/$_gitname2-build

  msg "Done building SuperCollider with Nova server"
  msg "Starting built of SC3-Plugins"

  cd $srcdir
  msg "Connecting to GIT server...."

  if [ -d $_gitname2 ] ; then
    (cd $_gitname2 && git pull origin)
    msg "The local files are updated."
  else
    git clone $_gitroot2
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  cp -r $_gitname2 $_gitname2-build
  cd $_gitname2-build

  cmake -DCMAKE_BUILD_TYPE=Release -DCMAKE_INSTALL_PREFIX=/usr -DSC_PATH=$srcdir/supercollider-build/ -DAY=1 || return 1

  make || return 1
  make DESTDIR=$pkgdir/ install || return 1

  rm -rf $srcdir/$_gitname2-build
}
