# Maintainer: SpepS <dreamspepser at yahoo dot it>

pkgname=harmonyseq
pkgver=0.14
pkgrel=1
pkgdesc="A loop-based MIDI software sequencer intended to help music composers and performers."
arch=(i686 x86_64)
url="http://harmonyseq.wordpress.com/"
license=('GPL')
depends=('alsa-lib' 'gtkmm')
install="$pkgname.install"
source=("http://launchpad.net/harmonyseq/trunk/$pkgver/+download/${pkgname}_$pkgver.tar.gz")
md5sums=('a65eeb59496299a448b8b89e38af3d78')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
