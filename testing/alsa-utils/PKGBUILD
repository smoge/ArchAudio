# Contributor: judd <jvinet@zeroflux.org>

pkgname=alsa-utils
pkgver=1.0.24.2
pkgrel=4
pkgdesc="An alternative implementation of Linux sound support"
arch=('i686' 'x86_64')
url="http://www.alsa-project.org"
#can not use >=$pkgver due to use of letters in alsa-lib update versioning
depends=("alsa-lib>1.0.24" 'dialog' 'pciutils' 'ncurses')
makedepends=('xmlto' 'docbook-xsl')
license=('GPL')
source=(ftp://ftp.alsa-project.org/pub/utils/$pkgname-${pkgver}.tar.bz2
        alsa
        alsaconf
        alsa.conf.d)
backup=(etc/conf.d/alsa)

md5sums=('8238cd57cb301d1c36bcf0ecb59ce6b2'
         '3ef812cae83053d01cd560284efad71f'                                                                
         'c1f2c539849c20906e5ccce48816fcae'                                                                
         '4c8ae9f976c7df5e271a4cb91ccc7767')

build() {

  mv ${srcdir}/${pkgname}-${pkgver}/alsaconf ${srcdir}/${pkgname}-${pkgver}/alsaconf.old
  mv ${srcdir}/alsaconf ${srcdir}/${pkgname}-${pkgver}/alsaconf
  
  cd ${srcdir}/${pkgname}-${pkgver}
  ./configure --prefix=/usr
  make
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}
  make DESTDIR=${pkgdir} install
   install -D -m755 ../alsa ${pkgdir}/etc/rc.d/alsa
   install -D -m644 ../alsa.conf.d ${pkgdir}/etc/conf.d/alsa
   
  # dir where to save ALSA state
  install -d ${pkgdir}/var/lib/alsa
}

