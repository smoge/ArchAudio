# Contributor: SpepS <dreamspepser at yahoo dot it>
# Contributor: Bernardo Barros <bernardobarros@gmail.com>

pkgname=python2-pyo
pkgver=0.02
pkgrel=2
pkgdesc="A Python module written in C to help digital signal processing script creation"
arch=('i686' 'x86_64')
url="http://code.google.com/p/pyo/"
license=('GPL')
provides=('python-pyo')
conflicts=('python-pyo')
depends=('python2>=2.5' 'portmidi' 'portaudio' 'liblo' 'libsndfile')
source=("http://pyo.googlecode.com/files/pyo_$pkgver-src.tar.bz2"
  "http://pyo.googlecode.com/files/pyo_$pkgver-doc.tar.bz2")
md5sums=('7e2967db9cf405fb4dc66735920c384a'
         'd8fb1fecaec3069d00c796bc402929ba')

build() {

  cd "$srcdir/pyo_$pkgver-src"
  export PYTHON="python2"
  python2 setup.py build
}

package() {

  cd "$srcdir/pyo_$pkgver-src"
  python2 setup.py install --root="$pkgdir/"

  cd "$srcdir/pyo_$pkgver-doc"
  install -d $pkgdir/usr/share/doc/pyo
  cp -R * $pkgdir/usr/share/doc/pyo
}
