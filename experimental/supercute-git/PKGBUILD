# Maintainer: Arch Linux Pro Audio <archaudio-devel@archaudio.org>
# Contributor: Bernardo Barros <bernardobarros@gmail.com>

pkgname=supercute-git
pkgver=20110201
pkgrel=1
pkgdesc="Special version of SuperCollider that includes a new cross-platform GUI implementation using Qt framework. It also enables WiiMote support."
url="http://supercollider.sourceforge.net/"
arch=('i686' 'x86_64')
license=('GPL')
depends=('jack' 'fftw' 'avahi')
makedepends=('git' 'libsndfile>=1.0' 'qt' 'cwiid' 'emacs' 'vim' 'gedit' 'icu' 'gcc>=3.0' 'pkgconfig>=0.14.0' 'scons>=0.96' 'alsa-lib')
conflicts=('supercollider')
provides=('supercollider')

_gitroot="git://github.com/jleben/SuperCute.git"
_gitname="SuperCute"

build() {
  cd $srcdir
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    (cd $_gitname && git pull origin && git submodule update)
    msg "The local files are updated."
  else
    git clone --recursive $_gitroot
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  cp -r $_gitname $_gitname-build
  cd $_gitname-build/

  mkdir build
  cd build

  cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=Release -DSC_QT=1 -DWII=1 -DSC_ED=1 -DSC_EL=1 -DSUPERNOVA=1 -DNOVA_SIMD=1 ..

  make
}

package() {

  cd $_gitname-build/build

  make DESTDIR=$pkgdir/ install
  rm -rf $srcdir/$_gitname-build
}
