# Maintainer: bjoern lindig (bjoern _dot_ lindig _at_ google.com)
pkgname=faust2-git
pkgver=20110515
pkgrel=1
pkgdesc=""
arch=('i686' 'x86_64')
url="http://faust.grame.fr/"
license=('GPL')
groups=()
depends=('coreutils')
makedepends=('git')
provides=('faust')
conflicts=('faust-cvs' 'faust-git')
replaces=()
backup=()
options=()
install=
source=(Makefile.unix-faust2.diff)
noextract=()
md5sums=('6c8fb962545de2f7abc5270dedef64a5')

_gitroot="git://faudiostream.git.sourceforge.net/gitroot/faudiostream/faudiostream"
_gitname="faust2"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
    cd $_gitname && git checkout -b faust2 origin/faust2
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"

  cd "${srcdir}/${_gitname}-build/compiler" || return 1
  patch -uN -i ../../Makefile.unix-faust2.diff || return 1

  cd "$srcdir/$_gitname-build"
  #
  # BUILD HERE
  #

  #./autogen.sh || return 1
  #./configure --prefix=/usr || return 1
  make PREFIX=/usr/ || return 1
  make PREFIX=/usr/ DESTDIR="$pkgdir/" install || return 1
}
