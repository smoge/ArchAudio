# ############## Patch for FFmpeg problem #####################
# 
# http://forum.audacityteam.org/viewtopic.php?p=80900#p80900
# https://bbs.archlinux.org/viewtopic.php?id=95285
#
###############################################################

pkgname=audacity-cvs
pkgver=20110430
pkgrel=1
pkgdesc="A program that lets you manipulate digital audio waveforms (development snapshot)"
arch=('i686' 'x86_64')
url="http://audacity.sourceforge.net/"
license=('GPL')
depends=('libvorbis' 'libmad' 'libid3tag' 'wxgtk' 'libsamplerate' 'lame' 'shared-mime-info' 'desktop-file-utils' 'redland' 'jack')
makedepends=('cvs' 'python2' 'pkgconfig' 'zip' 'soundtouch')
options=('!makeflags')
conflicts=('audacity')
provides=('audacity')
source=(ffmpeg.patch)
md5sums=('4b3e5e14e309a93473da5559a2ffbdc9')

_cvsroot=":pserver:anonymous:@audacity.cvs.sourceforge.net:/cvsroot/audacity"
_cvsmod="audacity"

build() {

  cd "$srcdir"
  
  msg "Connecting to $_cvsmod.sourceforge.net CVS server...."
  if [ -d $_cvsmod/CVS ]; then
    cd $_cvsmod
    cvs -z3 update -d
  else
    cvs -z3 -d $_cvsroot co -D $pkgver -f $_cvsmod
    cd $_cvsmod
  fi
  
  msg "CVS checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_cvsmod-build"
  cp -r "$srcdir/$_cvsmod" "$srcdir/$_cvsmod-build"
  cd "$srcdir/$_cvsmod-build"
  
#  patch -p0 -d src/ -i "$srcdir/ffmpeg.patch" || return 1
  
  WX_CONFIG=/usr/bin/wx-config ./configure --prefix=/usr \
	--with-portmixer=no --with-libsamplerate=system \
	--without-libresample --with-libmad=system --with-id3tag=system \
	--with-flac=system --with-vorbis=system --with-libexpat=system \
	--with-libsndfile=system --with-soundtouch --enable-unicode \
	--without-taglib --without-ffmpeg
  
  make 
}

package() {

  cd "$srcdir/$_cvsmod-build"

  make DESTDIR="$pkgdir/" install
}
