pkgname=jack2
_tarname=jack
pkgver=1.9.5
pkgrel=1
pkgdesc="Jack Audio Connection Kit MP: The next-generation JACK"
arch=(i686 x86_64)
url="http://www.grame.fr/~letz/jackdmp.html"
license=('GPL')
depends=('libsamplerate')
makedepends=('libffado')
optdepends=('libffado: FireWire audio device support')
provides=("jack=0.118.0" 'jackmp' 'jackdmp')
conflicts=('jack')
source=(http://www.grame.fr/~letz/$_tarname-$pkgver.tar.bz2)

build() {
  cd "$srcdir/$_tarname-$pkgver"

  ./waf configure --prefix=/usr
  ./waf build $MAKEFLAGS || return 1
  ./waf install --destdir="$pkgdir/"
}
md5sums=('fdb86434b57255139b72c7f91e827fea')
