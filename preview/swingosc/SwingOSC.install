post_install() {
   cat << EOF

==>   For use with SuperCollider, add these lines to your .sclang.sc
       GUI.swing;
       SwingOSC.java = "/opt/java/jre/bin/java";
       SwingOSC.program = ("/usr/bin/SwingOSC.jar").standardizePath;
       SwingOSC.default.boot;

EOF
}

post_upgrade() {
  post_install
}

op=$1
shift
$op $*
