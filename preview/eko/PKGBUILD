# Maintainer: SpepS <dreamspepser at yahoo dot it>

pkgname=eko
pkgver=0.4.0
pkgrel=1
pkgdesc="A simple sound editor based on Qt, libsndfile, and libsample rate."
arch=(i686 x86_64)
url="http://eko.sourceforge.net/"
license=('GPL')
depends=('qt' 'jack')
install="$pkgname.install"
source=("http://downloads.sourceforge.net/project/$pkgname/$pkgname/$pkgname-$pkgver.tar.bz2"
        "$pkgname.desktop")
md5sums=('892be2cf6d0f91e80b3500fecd743ee6'
         'a10ec56761ce95a8f8e7c9fa464ad0bb')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  qmake PREFIX=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make INSTALL_ROOT="$pkgdir/" install

  # Install desktop file and pixmaps
  install -Dm644 ../$pkgname.desktop "$pkgdir/usr/share/applications/$pkgname.desktop"
  install -Dm644 images/$pkgname-mascot.svg "$pkgdir/usr/share/pixmaps/$pkgname.svg"
}
